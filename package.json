{
  "name": "sidebar-for-class",
  "version": "1.0.0",
  "description": "A sidebar utility for class",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 >nul && electron . --disable-gpu --enable-logging",
    "build": "electron-builder",
    "dist": "electron-builder --win --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.sidebar.class",
    "productName": "SidebarForClass",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "**/*",
      "!dist/*",
      "!src/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PANDAJSR/sidebar-for-class.git"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0-only",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/PANDAJSR/sidebar-for-class/issues"
  },
  "homepage": "https://github.com/PANDAJSR/sidebar-for-class#readme",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "loudness": "^0.4.2"
  }
}
